<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="parking">

	<select id="parkingList" resultType="com.test.dto.ParkingDTO">
		select * from parking
	</select>
	
	<select id="parkingDetail" resultType="com.test.dto.ParkingDTO">
		select * from parking where parkno = #{parkno}
	</select>
	
	<insert id="carIn">
		insert into parking(parkno, carnum, intime, id) values ((select nvl(max(parkno),0)+1 from parking), #{carnum}, default, #{id})
	</insert>
	
	<delete id="carOut">
		delete from parking where parkno = #{parkno}
	</delete>
	
	<!-- 리스트에 출차시간 기록 남는 -->
	<insert id="carOut2">
		insert into parking(outtime) values(default) where parkno = #{parkno}
	</insert>
	
</mapper>