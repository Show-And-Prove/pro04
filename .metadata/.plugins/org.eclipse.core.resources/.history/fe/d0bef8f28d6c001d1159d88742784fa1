<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="free">
	<select id="freeList" resultType="com.test.dto.FreeDTO">
		select * from free
	</select>
	
	<select id="freeDetail" resultType="com.test.dto.FreeDTO">
		select * from free where bno = #{bno}
	</select>
	
	<insert id="freeInsert">
		insert into board values ((select nvl(max(bno),0)+1 from board), #{title}, #{content}, 'admin', default, default)
	</insert>
	
	<delete id="boardDelete">
		delete from board where seq=#{seq}
	</delete>
	
	<update id="boardEdit">
		update board set title=#{title}, content=#{content} where seq=#{seq}
	</update>
</mapper>